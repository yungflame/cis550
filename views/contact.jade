html
  head
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js')
  body
    div
      div
        nav.navbar.navbar-inverse(role='navigation', style='padding-left:100px;')
          ul.nav.navbar-nav
            li
              a(href='/') Home
            li
              a(href='/userform') Try It Yourself
            li
              a(href='/about') About Us
            li.active
              a(href='/contact')
                | Contact Us
                span.sr-only (current)
      br
      form.form-horizontal(role='form', style='width: 50%;')
        .form-group
          label.col-sm-2.control-label(for='name') Name
          .col-sm-10
            input#name.form-control(type='text', name='name', placeholder='First & Last Name', value='')
        .form-group
          label.col-sm-2.control-label(for='email') Email
          .col-sm-10
            input#email.form-control(type='email', name='email', placeholder='example@domain.com', value='')
        .form-group
          label.col-sm-2.control-label(for='message') Message
          .col-sm-10
            textarea.form-control(rows='4', name='message')
        .form-group
          label.col-sm-2.control-label(for='human') 2 + 3 = ?
          .col-sm-10
            input#human.form-control(type='text', name='human', placeholder='Your Answer')
        .form-group
          .col-sm-10.col-sm-offset-2
            input#submit.btn.btn-primary(name='submit', type='submit', value='Send')
        .form-group
          .col-sm-10.col-sm-offset-2
